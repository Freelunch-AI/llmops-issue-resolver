FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Create sandbox user
RUN useradd -m -s /bin/bash sandbox

# Create workspace directory
RUN mkdir -p /workspace && chown sandbox:sandbox /workspace

# Switch to sandbox user
USER sandbox
WORKDIR /workspace

# Copy pyproject.toml
COPY --chown=sandbox:sandbox pyproject.toml /workspace/

# Create virtual environment and install dependencies
RUN uv venv /workspace/venv && \
    . /workspace/venv/bin/activate && \
    uv pip install -e .

# Add venv to PATH
ENV PATH="/workspace/venv/bin:$PATH"

# Copy sandbox code
COPY --chown=sandbox:sandbox core/ /workspace/core/
COPY --chown=sandbox:sandbox tools/ /workspace/tools/
COPY --chown=sandbox:sandbox api/ /workspace/api/

EXPOSE 8000

CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]